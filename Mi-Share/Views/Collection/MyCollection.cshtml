@model Mi_Share.ViewModels.ItemViewModel

@{
    ViewBag.Title = "My Collection";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Items</h3>
                <div class="pull-right">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-default">
                        Add New
                    </button>
                </div>
            </div>

            <div class="box-body" id="ItemList" data-url="@Url.Action("ItemList")">

                @{
                    Html.RenderAction("ItemList", "Collection");
                    // Html.RenderPartial("ItemList");
                }
                <!-- /.box-header -->

            </div>

            <div id="EditForm" class="modal">
                
            </div>



                <div class="modal" id="modal-default">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h4 class="modal-title">New Item</h4>
                            </div>
                            <!-- form start -->
                            @using (Html.BeginForm("CreateItem", "Collection",FormMethod.Post, new { id= "AddItemForm", @class="ItemForm"}))
                            {
                                <div class="modal-body">
                                    <div id="statusmessage"></div>
                                    <div class="box box-primary">


                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Media Type</label>
                                                @Html.DropDownListFor(model => model.Category.ID, Model.Categories.OrderBy(x => x.Text), new { @class = "form-control" })
                                            </div>
                                            <div class="form-group">
                                                <label for="item_name">Item Name</label>
                                                @Html.EditorFor(model=>model.Name, new { htmlAttributes = new { @class = "form-control required",@required ="required" } })

                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputFile">Item Description</label>
                                                @Html.TextAreaFor(model=>model.Description,new { @class = "form-control"})

                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                                    <button type="submit"  class="btn btn-primary">Save</button>
                                </div>
                            }
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
                <!-- /.box-body -->
            </div>
    </div>
</div>
