@model Mi_Share.ViewModels.ItemViewModel


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Edit Item</h4>
            
        </div>
        <!-- form start -->
        @using (Html.BeginForm("UpdateItem", "Collection", FormMethod.Post, new { id = "EditItemForm", @class = "ItemForm" }))
        {
            <div class="modal-body">
                <div id="statusmessage"></div>
                <div class="box box-primary">


                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Media Type</label>
                            @Html.DropDownListFor(model => model.Category.ID, Model.Categories.OrderBy(x => x.Text), new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="item_name">Item Name</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control required", @required = "required" } })

                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Item Description</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="item_name">Status</label>
                            @Html.EnumDropDownListFor(model => model.Status, new { @class = "form-control" })

                        </div>
                    </div>

                </div>
            </div>
                                <div class="modal-footer">
                                    @Html.HiddenFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
        }
    </div>
    <!-- /.modal-content -->
</div>

